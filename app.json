{
  "expo": {
    "name": "Coperacha",
    "slug": "coperacha",
    "privacy": "public",
    "platforms": [
      "ios",
      "android"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "celodappkit",
    "splash": {
      "image": "./assets/splash2.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "xyz.coperacha.client",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow Coperacha to save photos",
        "NSCameraUsageDescription": "Allow Coperacha to access your camera", 
        "NSMicrophoneUsageDescription": "Allow Coperacha to use your microphone"
      }
    },
    "android": {
      "icon": "./assets/icon.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#35D07F"
      }
    },
    "description": "Fundraising for you and your community, on Celo",
    "githubUrl": "https://github.com/Alex-Neo-Projects/Coperacha-app"
  }
}

